            <pattern>%d{ISO8601} [%thread] [%level] \(%class\) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    -->

    <!-- USE THIS FOR LOGGING TO disk -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <encoder>
            <pattern>%d{ISO8601} [%thread] [%level] \(%class\) %msg%n</pattern>
            <!-- this quadruples logging throughput -->
            <!--
            <immediateFlush>false</immediateFlush>
            -->
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>var/output/logs/app.%d{yyyy-MM-dd-HH}.log</fileNamePattern>
            <maxHistory>24</maxHistory>
            <cleanHistoryOnStart>false</cleanHistoryOnStart>
        </rollingPolicy>
    </appender> 
    <root level="info">
        <appender-ref ref="FILE" />
    </root>

    <appender name="JDBI-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <encoder>
            <pattern>%d{ISO8601} [%thread] [%level] \(%class\) %msg%n</pattern>
            <!-- this quadruples logging throughput -->
            <!--
            <immediateFlush>false</immediateFlush>
            -->
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>var/output/logs/jdbi.%d{yyyy-MM-dd-HH, Etc/UTC}.log</fileNamePattern>
            <maxHistory>24</maxHistory>
            <cleanHistoryOnStart>false</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <!-- Turn the level up to Trace for debugging SQL statements generated by JDBI -->
    <logger name="org.skife.jdbi.v2" level="INFO">
        <appender-ref ref="JDBI-FILE" />
    </logger>

    <appender name="METRICS-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <encoder>
            <pattern>%d{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", UTC} %msg%n</pattern>
            <!-- this quadruples logging throughput -->
            <!--
            <immediateFlush>false</immediateFlush>
            -->
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>var/output/logs/metrics.%d{yyyy-MM-dd-HH, Etc/UTC}.log</fileNamePattern>
            <maxHistory>24</maxHistory>
            <cleanHistoryOnStart>false</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <logger name="com.fooorg.fooproj.metrics" level="INFO" additivity="false">
        <appender-ref ref="METRICS-FILE"/>
    </logger>

</configuration>
